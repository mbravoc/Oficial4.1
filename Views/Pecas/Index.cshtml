@model IEnumerable<Oficial4.Models.Pecas>

@{
    ViewBag.Title = "Lista Peças";
}

<h2>Lista de Peças</h2>

<p>
    @Html.ActionLink("Incluir Novo Produto", "Create", new { @class = "btn btn-success" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nome_Pecas)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.preco_Pecas)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nome_carro)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tipo1.descricao)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nome_Pecas)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.preco_Pecas)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nome_carro)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tipo1.descricao)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id_Pecas }) |
            @Html.ActionLink("Details", "Details", new { id=item.id_Pecas }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id_Pecas })
        </td>
    </tr>
}

</table>

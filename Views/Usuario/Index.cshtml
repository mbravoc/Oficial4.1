@model IEnumerable<Oficial4.Models.Usuario>

@{
    ViewBag.Title = "Usuários";
}

<h2>Usuários</h2>

<p>
    @Html.ActionLink("Criar novo Usuário", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nome_Usuario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.senha_Usuario)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nome_Usuario)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.senha_Usuario)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.id_Usuario }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.id_Usuario }) |
            @Html.ActionLink("Excluir", "Delete", new { id=item.id_Usuario })
        </td>
    </tr>
}

</table>

@model Oficial4.Models.Usuario

@{
    ViewBag.Title = "Login";
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<style>
 .field-validation-error {
        color: red;
    }

    .msgerro {
        text-align: center;
    }
.form-login{
     
     display: flex;
     flex-direction: row;
     justify-content: center;
     align-items: center;
     width: 90%;
     height: 300px;

     
}
.panel panel-default{
     margin: auto;
  width: 80%;
  background: #fff;
  border: 3px solid #73AD21;
  padding: 10px;
}

</style>

<script src="~/scripts/bootstrap.min.js"></script>
<link href="~/Content/login.css" rel="stylesheet" />

@using (Html.BeginForm("Login", "Home", FormMethod.Post))

{
    @Html.AntiForgeryToken();


    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
<body>

    <div class="container">
        <div class="form-login">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="panel-title">LOGIN - Catálogo</div>
                </div>

                <div style="padding-top:10px" class="panel-body">
                    <div style="display:none" id="result" class="alert
                    alert-danger col-sm-12">

                    </div>

                    <!--<div style="margin-bottom: 25px" class="input-group">
                    <span class="input-group-addon">
                        <i class="glyphicon
                    glyphicon-user"></i>
                    </span>-->
                    <div>

                        @Html.LabelFor(model => model.nome_Usuario)


                        @Html.EditorFor(model => model.nome_Usuario)

                    </div>
                    <div>
                        @Html.ValidationMessageFor(model => model.nome_Usuario)

                    </div>

                    <!--<div style="margin-bottom: 25px" class="input-group">
                    <span class="input-group-addon">
                        <i class="glyphicon
                    glyphicon-lock"></i>
                    </span>-->

                    <div>

                        @Html.LabelFor(model => model.senha_Usuario)



                        @Html.EditorFor(model => model.senha_Usuario)

                    </div>
                    <div>

                        @Html.ValidationMessageFor(model => model.senha_Usuario)
                    </div>
                </div>
                <div>
                    <div colspan="2">
                        <label class="field-validation-error">@Html.DisplayFor(model => model.LoginErrorMessage)</label>
                    </div>

                </div>


                <div style="margin-top:2px" class="form-group">

                    <div class="col-sm-12 controls">
                        <input type="submit" value="Acessar"
                               class="btn primary btn-lg" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}